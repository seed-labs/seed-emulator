{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2016",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "public/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
