{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "types": ["node"],
    "outDir": "bin/",
    "lib": ["ES2015", "DOM"]  // 必须包含 ES2015 或 ES6
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
